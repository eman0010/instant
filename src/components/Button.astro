---
interface Props {
  variant?: "primary" | "secondary" | "tertiary";
  href?: string;
  label: string;
}

const { variant = "primary", href = "#", label } = Astro.props as Props;

const variants: Record<"primary" | "secondary" | "tertiary", string> = {
  primary: "bg-blue text-black hover:bg-blue/80",
  secondary: "bg-red text-white hover:bg-red/80",
  tertiary: "bg-white text-black hover:bg-white/80",
};
---

<a href={href} class={`btn ${variants[variant]}`}>
  {label}
</a>
