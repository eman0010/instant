---

<div id="countdown" class="countdown text-white">00:00:00:00</div>

<script>
  const targetDate = new Date("2025-10-18T00:00:00");
  const countdownEl = document.getElementById("countdown");

  function updateCountdown() {
    const now = new Date();
    const diff = targetDate.getTime() - now.getTime();

    if (!countdownEl) return;

    if (diff <= 0) {
      countdownEl.textContent = "00:00:00:00";
      return;
    }

    const totalSeconds = Math.floor(diff / 1000);
    const days = String(Math.floor(totalSeconds / (3600 * 24))).padStart(
      2,
      "0"
    );
    const hours = String(
      Math.floor((totalSeconds % (3600 * 24)) / 3600)
    ).padStart(2, "0");
    const minutes = String(Math.floor((totalSeconds % 3600) / 60)).padStart(
      2,
      "0"
    );
    const seconds = String(totalSeconds % 60).padStart(2, "0");

    countdownEl.textContent = `${days}:${hours}:${minutes}:${seconds}`;
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>
