---
const { count = 5 } = Astro.props;

const images = Array.from({ length: count }, (_, i) => ({
  src: `/polaroid${i + 1}.webp`,
  alt: `Polaroid ${i + 1}`,
}));
---

<div class="flex justify-center space-x-6">
  {
    images.map((img, i) => (
      <img
        src={img.src}
        alt={img.alt}
        class={`w-40 md:w-48 lg:w-56 object-contain drop-shadow-lg
                ${i % 2 === 0 ? "rotate-[-3deg]" : "rotate-[3deg]"}`}
      />
    ))
  }
</div>
