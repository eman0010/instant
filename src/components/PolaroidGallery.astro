---
const { count = 5 } = Astro.props;

const images = Array.from({ length: count }, (_, i) => ({
  src: `/polaroid${i + 1}.webp`,
  alt: `Polaroid ${i + 1}`,
}));
---

<div
  class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6 justify-items-center"
>
  {
    images.map((img, i) => (
      <img
        src={img.src}
        alt={img.alt}
        class={`
          w-32 sm:w-36 md:w-44 lg:w-48 object-contain drop-shadow-lg
          transition-transform duration-300 hover:scale-110
          ${i % 2 === 0 ? "rotate-[-3deg]" : "rotate-[3deg]"}
          ${i > 2 ? "hidden lg:block" : ""}
        `}
      />
    ))
  }
</div>
